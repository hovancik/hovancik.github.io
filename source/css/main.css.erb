html {
  font-family: 'Roboto';
  font-weight: 300;
  line-height: 1.5rem;
  color: #4a4a4a;
}
.center {
  text-align: center;
}

a, a:visited {
  transition: all .5s ease-in-out;
  color: #6e6e6e;
}

.index, .blog {
  width: 600px;
  max-width: 90%;
  margin: 0 auto;
}

.blog__nav {
  text-align: right;
}

.blog h1 a {
  text-decoration: none;
  line-height: 2.3rem;
}

.blog h2,
.blog h3,
.blog h4 {
  font-weight: 300;
}

.index__name, .blog h1 {
  font-family: 'Poiret One', cursive;
  font-weight: 700;
}

.index__name a {
  text-decoration: none;
  color: #222;
}

.index__desc, footer, .blog h2 {
  font-family: 'Poiret One', cursive;
  font-weight: 300;
}

.article__read-more {
  text-align: right;
}

footer {
  text-align: center;
}

.footer__name {
  margin-bottom: 0;
}

.footer__desc {
  margin-top: 0;
}

code, samp, kbd {
  font-family: Courier, monospace, sans-serif;
  text-align: left;
  font-size: 0.7rem;
  color: #6e6e6e;
}

pre code {
  line-height: 1rem;
}

pre, blockquote {
  padding: 0.1rem 0.5rem 0.3rem 0.7rem;
  border-left: .2rem solid #ccc;
  margin: 1rem 0 1rem 0.3rem;
  overflow: auto;
  width: 93%;
  font-size: 0.9rem;
  color: #6e6e6e;
}
