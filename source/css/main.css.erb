html {
  font-family: 'Roboto';
  font-weight: 300;
}
.center {
  text-align: center;
}

a, a:visited {
  transition: all .5s ease-in-out;
  color: #555;
}

.index, .blog {
  width: 500px;
  max-width: 90%;
  margin: 0 auto;
}

.blog__nav {
  text-align: right;
}

.blog h1 a {
  text-decoration: none;
}

.index__name, .blog h1 {
  font-family: 'Poiret One', cursive;
  font-weight: 700;
}

.index__name a {
  text-decoration: none;
  color: black;
}

.index__desc, footer, .blog h2 {
  font-family: 'Poiret One', cursive;
  font-weight: 300;
}

.article__read-more {
  text-align: right;
}

footer {
  text-align: center;
}

.footer__name {
  margin-bottom: 0;
}

.footer__desc {
  margin-top: 0;
}

code, samp, kbd {
  font-family: Courier, monospace, sans-serif;
  text-align: left;
  color: #555;
}
pre code {
  line-height: 1rem;
  font-size: 0.7rem;
}
pre {
  padding: 0.1rem 0.5rem 0.3rem 0.7rem;
  border-left: .2rem solid #ccc;
  margin: 1rem 0 1rem 0.3rem;
  overflow: auto;
  width: 93%;
}
